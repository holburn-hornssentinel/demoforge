# DemoForge Configuration Template
# Copy this file to .env and fill in your values

# API Keys
# Get your key from: https://aistudio.google.com/app/apikey
GOOGLE_API_KEY=AIzaSy...

# TTS Engine Selection
# Options: kokoro (default, local), edge (cloud fallback), pocket (voice cloning)
TTS_ENGINE=kokoro

# Voice Settings
# For Kokoro: af (default female), am (male), bf (british female), bm (british male)
# For Edge TTS: en-US-AriaNeural, en-US-GuyNeural, etc.
TTS_VOICE=af

# Output Configuration
OUTPUT_DIR=/app/output
CACHE_DIR=/app/cache
MAX_VIDEO_LENGTH=300

# Browser Settings
HEADLESS_BROWSER=true
BROWSER_TIMEOUT=30000

# Pipeline Settings
ENABLE_CACHING=true
PARALLEL_SCREENSHOTS=3

# Server Settings
API_HOST=0.0.0.0
API_PORT=7500
CORS_ORIGINS=http://localhost:7501,http://localhost:5173

# Optional: Voice Cloning (Pocket TTS)
# VOICE_SAMPLE_PATH=/app/assets/voice-sample.wav

# Optional: Google Vision API (for screenshot intelligence)
# VISION_ENABLED=true
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# Optional: Advanced Settings
# GEMINI_MODEL=gemini-2.0-flash-exp
# REPOMIX_MAX_FILES=1000
# SCREENSHOT_RESOLUTION=2560x1440
